<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTime.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/buttonBig</item>
        <item name="buttonStyleSmall">@style/buttonSmall</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

<!--    <style name="Theme.SimpleTime.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

<!--    <style name="Theme.SimpleTime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="Theme.SimpleTime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="log_in">
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_purple_dark</item>
    </style>

    <style name="back">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#25173A</item>
    </style>

    <style name="forgot_pass">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="buttonBig" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonSmall" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="password">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="simpletime">
        <item name="android:textSize">36sp</item>
        <item name="android:shadowColor">@color/shadow_black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="submit">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#25173A</item>
    </style>

    <style name="categories">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#C6A0D8</item>
    </style>

</resources>